{
    "name": "Stevens Web Extension",
    "version": "0.0.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "alarms",
        "bookmarks",
        "contextMenus",
        "storage"
    ],
    "icons": {
        "128": "assets/temp_icon.png"
    },
    "browser_action": {
        "default_icon": "assets/temp_icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": false
    }
}
