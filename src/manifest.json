{
    "name": "Stevens Web Extension",
    "version": "0.0.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "alarms",
        "bookmarks",
        "contextMenus",
        "storage",
        "<all_urls>"
    ],
    "icons": {
        "128": "assets/icon128.png",
        "48": "assets/icon48.png",
        "16": "assets/icon16.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    }
}
