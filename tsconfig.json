{
    "compilerOptions": {
        "declaration": false,
        "esModuleInterop": true,
        "lib": ["ES6"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "target": "ES6",
        "types": ["chrome", "jest", "node"]
    },
    "include": ["src", "webpack.config.ts"]
}
